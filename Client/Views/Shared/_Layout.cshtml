<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Client</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Client.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/moviePopup.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style="max-width: 1320px;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Movies</a>
                        </li>                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">TV Shows</a>
                        </li>                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Plan</a>
                        </li>                          
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Categories</a>
                        </li>                        
                        <li class="nav-item flex-1">
                        </li>
                        <li style="position: relative;">
                            <input class="search-input" />
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search search-input-icon" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                            </svg>
                        </li>                        
                        <li style="margin-left: 50px;">
                            <!-- Default dropstart button -->
                            <div class="btn-group dropstart">
                                <img class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" src="https://my.alfred.edu/zoom/_images/foster-lake.jpg"/ style="border-radius: 50%; width: 40px; height: 40px;">
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item active" href="#">Action</a></li>
                                    <li><a class="dropdown-item" href="#">Another action</a></li>
                                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">Separated link</a></li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Button trigger modal -->
    <button id="preview-modal-btn" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#previewModal" style="display: none;">
    </button>

    <!-- Modal -->
    <div class="modal fade" id="previewModal" tabindex="-1" aria-labelledby="previewModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="previewModal--player_container" id="previewModal--player_container"></div>
                </div>
                <div class="modal-body">
                    <div class="previewModal--info" style="opacity: 1;">
                        <div class="detail-modal-container">
                            <div class="ptrack-container">
                                <div>
                                    <div class="previewModal--detailsMetadata">
                                        <div class="previewModal--detailsMetadata-left">
                                            <p>
                                                <div class="description" id="description">
                                                    Before eradicating humankind from the world, the gods give them one last chance to prove themselves worthy of survival. Let the Ragnarok battles begin!
                                                </div>
                                            </p>
                                        </div>
                                        <div class="previewModal--detailsMetadata-right">
                                            <div class="previewModal--tags" id="previewModal--tags">
                                                <span class="previewModal--tags-label">Genres:</span>
                                                <span class="tag-item">Action anime,</span>
                                                <span class="tag-item">Japanese,</span>
                                                <span class="tag-item">Anime series,</span>
                                            </div>
                                            <div class="previewModal--tags" id="previewModal--tags1">
                                                <span class="previewModal--tags-label">Released Date:</span>
                                                <span class="tag-item" id="released-date-tag-item"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="ptrack-container">
                                <div class="ptrack-content">
                                    <div class="episodeSelector">
                                        <div class="episodeSelector-header">
                                            <div>
                                                <h3 class="previewModal--section-header episodeSelector-label">Episodes</h3>
                                            </div>
                                            <div class="episodeSelector-dropdown">
                                                <div class="dropdown">
                                                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        Season 1
                                                    </button>
                                                    <ul class="dropdown-menu" id="dropdown-menu">
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="episodeSelector-container" id="episodeSelector-container">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
