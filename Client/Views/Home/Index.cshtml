<div class="popular-movies">
    <div class="po-title-bar flex flex-row">
        <h2>POPULAR MOVIES</h2>
        <div class="flex-1"></div>
        <select class="ranking-select" id="ranking-select">
            <option value="1">Today</option>
            <option value="2" selected>This week</option>
            <option value="3">This month</option>
        </select>
    </div>
    <div class="popular-movies-container">
        <div class="popular-movies-item">
            @foreach (var item in (List<GetMovieByRankResponseDTO>)ViewBag.RankedMovie)
            {
                <div class="movie-items" data-id="@item.MovieId">
                    <div class="img-container">
                        <img src="@item.MovieImage" class="rankedMovieImage">
                        <div class="overlay"></div>
                    </div>

                </div>
            }          
        </div>
    </div>
</div>
